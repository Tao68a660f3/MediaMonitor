<Window x:Class="MediaMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaMonitor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock x:Name="TxtTitle" FontSize="20" FontWeight="Bold" Text="歌名"/>
            <TextBlock x:Name="TxtArtist" FontSize="16" Foreground="Gray" Text="歌手"/>
            <TextBlock x:Name="TxtAlbum" FontSize="14" Text="专辑"/>
            <Separator Margin="0,10"/>
            <TextBlock x:Name="TxtStatus" Text="状态: Unknown"/>
            <ProgressBar x:Name="PrgBar" Height="10" Margin="0,5"/>
            <TextBlock x:Name="TxtTime" HorizontalAlignment="Right" Text="00:00 / 00:00"/>
        </StackPanel>
    </Grid>
</Window>
