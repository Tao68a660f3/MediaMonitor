<Window x:Class="MediaMonitor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="媒体同步调试终端 V2.0" Height="850" Width="520" Background="#F0F0F0">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="媒体源:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
            <ComboBox x:Name="ComboSessions" DisplayMemberPath="SourceAppUserModelId" SelectionChanged="ComboSessions_SelectionChanged"/>
        </DockPanel>

        <Border Grid.Row="1" Background="White" CornerRadius="5" Padding="15" Margin="0,0,0,10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="5" Color="#DDDDDD" ShadowDepth="1" Opacity="0.5"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock x:Name="TxtTitle" Text="未检测到播放" FontSize="20" FontWeight="Bold" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"/>
                <TextBlock x:Name="TxtArtist" Text="未知艺术家" FontSize="14" Foreground="Gray" Margin="0,5"/>
                <TextBlock x:Name="TxtAlbum" Text="未知专辑" FontSize="12" Foreground="LightGray"/>

                <ProgressBar x:Name="PbProgress" Height="10" Margin="0,15,0,5" Foreground="#0078D7" Background="#E0E0E0" BorderThickness="0"/>
                <DockPanel>
                    <TextBlock x:Name="TxtTime" Text="00:00 / 00:00" FontSize="11" Foreground="Gray"/>
                    <TextBlock x:Name="TxtLrcStatus" Text="等待加载歌词..." FontSize="11" Foreground="DarkOrange" HorizontalAlignment="Right"/>
                </DockPanel>

                <TextBlock x:Name="TxtLyricDisplay" Text="(当前歌词预览)" Margin="0,15,0,0" HorizontalAlignment="Center" FontSize="16" FontWeight="Medium" Foreground="#333333" TextWrapping="Wrap" TextAlignment="Center"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2">
            <Expander Header="硬件与路径设置" IsExpanded="True" Background="Transparent">
                <Border Background="#E8E8E8" Padding="10" CornerRadius="5" Margin="0,5">
                    <StackPanel>
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Margin="2">
                                <TextBlock Text="串口号:" FontSize="10"/>
                                <ComboBox x:Name="ComboPorts"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="2">
                                <TextBlock Text="波特率:" FontSize="10"/>
                                <ComboBox x:Name="ComboBaud">
                                    <ComboBoxItem Content="9600"/>
                                    <ComboBoxItem Content="115200" IsSelected="True"/>
                                    <ComboBoxItem Content="921600"/>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Margin="2">
                                <TextBlock Text="编码:" FontSize="10"/>
                                <ComboBox x:Name="ComboEncoding">
                                    <ComboBoxItem Content="UTF-8"/>
                                    <ComboBoxItem Content="GB2312"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="歌词搜索目录:" FontSize="10" Margin="0,5,0,0"/>
                        <DockPanel Margin="0,2,0,5">
                            <Button x:Name="BtnBrowse" Content="浏览" Click="BtnBrowse_Click" Width="50" DockPanel.Dock="Right"/>
                            <TextBox x:Name="TxtLrcPath" Text="C:\Lyrics" VerticalContentAlignment="Center"/>
                        </DockPanel>

                        <TextBlock Text="匹配模式 (用分号隔开):" FontSize="10"/>
                        <TextBox x:Name="TxtPatterns" Text="{}{Artist} - {Title};{Title}"/>

                        <WrapPanel Margin="0,8">
                            <CheckBox x:Name="ChkAdvancedMode" Content="高级协议(0xAA)" IsChecked="True" Margin="0,0,10,0"/>
                            <CheckBox x:Name="ChkIncremental" Content="增量发送" IsChecked="True" Margin="0,0,10,0"/>
                            <CheckBox x:Name="ChkTransOccupies" Content="翻译占行" IsChecked="True"/>
                        </WrapPanel>

                        <UniformGrid Columns="3" Margin="0,0,0,10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="屏行数:" VerticalAlignment="Center"/>
                                <TextBox x:Name="TxtScreenLines" PreviewTextInput="OnlyNumber_PreviewTextInput" TextChanged="NumberTextBox_TextChanged" InputMethod.IsInputMethodEnabled="False" Text="3" Width="35" Margin="5,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="偏移:" VerticalAlignment="Center"/>
                                <TextBox x:Name="TxtOffset" PreviewTextInput="OnlyNumber_PreviewTextInput" TextChanged="NumberTextBox_TextChanged" InputMethod.IsInputMethodEnabled="False" Text="1" Width="35" Margin="5,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="刷新率(ms):" VerticalAlignment="Center"/>
                                <TextBox x:Name="TxtUpdateRate" PreviewTextInput="OnlyNumber_PreviewTextInput" TextChanged="NumberTextBox_TextChanged" InputMethod.IsInputMethodEnabled="False" Text="50" Width="40" Margin="5,0"/>
                            </StackPanel>
                        </UniformGrid>

                        <Button x:Name="BtnSerialConn" Content="连接串口" Height="35" Click="BtnSerialConn_Click" Background="#0078D7" Foreground="White" BorderThickness="0" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </Expander>
        </StackPanel>

        <TextBlock Grid.Row="3" Text="真·串口协议解析流 (TX):" FontWeight="Bold" Margin="0,10,0,5" Foreground="#444444"/>

        <RichTextBox Grid.Row="4" x:Name="HexPreview" Background="#1E1E1E" Foreground="#CCCCCC" FontFamily="Consolas" IsReadOnly="True" VerticalScrollBarVisibility="Auto">
            <FlowDocument>
                <Paragraph>
                    <Run Text="等待串口数据发送..." Foreground="#555555"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
    </Grid>
</Window>